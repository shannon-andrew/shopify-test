.hero {
  z-index: 1;
  width: 98%;
  margin: 10.2rem auto 0 auto;
  height: calc(100vh - 184px);
  border-radius: 8rem 8rem 8rem 8rem;

  overflow: hidden;
  position: relative;
  background-image: {{ 'hero.png' | file_img_url: "master" }};

  .image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content {
    position: absolute;
    top: 50%;
    margin-left: 16rem;
    transform: translateY(-50%);
    color: #fff;
    button {
      margin-top: 1.6rem;
    }
  }
}
