{{ 'section-product-grid.css' | asset_url | stylesheet_tag }}

<div class="max-width wrapper">
  {% for product in section.settings.product_list %}
    {% render 'featured-card-horizontal', product: product %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Product list",
  "tag": "section",
  "settings": [
    {
      "type": "product_list",
      "id": "product_list",
      "label": "Products",
      "limit": 1
    }
  ]
}
{% endschema %}
