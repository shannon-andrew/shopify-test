{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="content">
  {% for block in section.blocks %}
    {% if block.settings.title %}
      <h2 class="title">{{ block.settings.title }}</h2>
    {% endif %}
    {% if block.settings.subtitle %}
      <p class="medium">{{ block.settings.subtitle }}</p>
    {% endif %}
    {% if block.settings.button_text %}
      <button>{{ block.settings.button_text }}</button>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "blocks": [
    {
      "name": "Title",
      "type": "title",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title text",
          "default": "Default titl;e"
        }
      ]
    },
    {
      "name": "Subtitle",
      "type": "subtitle",
      "settings": [
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle text",
          "default": "Some subtitle text here"
        }
      ]
    },
    {
      "name": "Button",
      "type": "button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Default button"
        },
        {
          "type": "url",
          "id": "linkto",
          "label": "Url"
        }
      ]
    }
  ],
  "tag": "section",
  "class": "hero",
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
