{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<img class="image" src="{{ section.settings.hero_image | image_url}}">
<h1 class="title">{{ section.settings.title }}</h1>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Button Link"
    }
  ],
  "tag": "section",
  "class": "hero",
  "presets": [
    {
      "name": "Hero",
      "settings": {
        "title": "Your title here",
        "button_text": "Explore now"
      }
    }
  ]
}
{% endschema %}
